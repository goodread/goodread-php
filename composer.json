{
    "name": "goodread/goodread",
    "version": "v0.3.1",
    "description": "Doctest for markdown with comment-based assertions. Python/JavaScript/Ruby/PHP test runners and hackmd.io integration.",
    "license": "MIT",
    "bin": [
        "bin/goodread-php"
    ],
    "require": {
        "php": ">=7.0",
        "symfony/yaml": "^3.0",
        "spatie/emoji": "^1.0",
        "kevinlebrun/colors.php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.35",
        "frictionlessdata/tableschema": "^0.1.5",
        "psy/psysh": "@stable"
    },
    "autoload": {
        "psr-4": {
            "goodread\\goodread\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --debug --bootstrap tests/autoload.php tests/ --coverage-clover coverage-clover.xml"
    }
}
